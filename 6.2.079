+     /*
+      * Check for "++opt=val" argument.
+      * Must be first, allow ":w ++enc=utf8 !cmd"
+      */
+     if (ea.argt & ARGOPT)
+ 	while (ea.arg[0] == '+' && ea.arg[1] == '+')
